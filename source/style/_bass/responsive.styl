@media screen and (max-width: 820px){
  .m-header {
    padding: 0 15px;
  }
}

@media screen and (max-width: 600px){
  .m-container .m-article-list .article{
    width: 100%;
    margin: 20px 0 0;
  }
  .m-container .m-article-list .article .inner{
    padding: 0 15px;
  }
  .m-header .title {
    padding: 76px 0 0;
  }
  .m-header {
    height: 200px;
  }
  .m-header .article-title{
    margin-top: 16px;
  }
  .m-header .big-tag {
    margin-top: 50px;
  }

  .btn-back-home{
    margin-top: 20px;
  }
  .m-detail {
    padding: 10px 15px;
  }
  .typo{
    font-size: 0.8em;
  }
}

@media screen and (max-width: 450px){
  .m-header h1 {
    font-size: 22px;
  }
  .m-header h3 {
    font-size: 16px;
  }
}

@media screen and (max-width: 375px){

  .m-container .m-article-list .article{
    width: 100%;
    margin: 20px 0 0;
  }
  .m-container .m-article-list .article .inner{
    padding: 0 15px;
  }
  .m-header .title {
    padding: 76px 0 0;
  }
  .m-header {
    height: 200px;
  }

}